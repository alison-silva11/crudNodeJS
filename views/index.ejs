<!DOCTYPE html>
<html>

<head>
  <title>
    Cadastro de Clientes
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>Lista de Clientes</h1>
  <p>Clientes já cadastrados no sistema</p>
  <table style="width: 50%;">
    <thead>
      <tr style="background-color: #ccc ;">
        <td style="width:50% ;">Nome</td>
        <td style="width:50% ;">Idade</td>
        <td style="width:50% ;">UF</td>
        <td colspan="2" style="width:20%;">Ações</td>
      </tr>
    </thead>
    <tbody>
      <% if(!docs || docs.length==0) { %>
        <tr>
          <td colspan="4">Nenhum Cliente encontrado.</td>
        </tr>
        <%} else { docs.forEach(function(customer){ %>
          <tr>
            <td style="width:50%">
              <%= customer.nome %>
            </td>
            <td style="width:15%">
              <%= customer.idade %>
            </td>
            <td style="width:15%">
              <%= customer.uf %>
            </td>
            <td style="width:20%">
            <a href="/delete/<%= customer._id %>" onclick="return confirm('Tem certeza que deseja excluir o cliente?');"> Excluir </a>
          </td>
          <td style="width:20%">
            <a href="/edit/<%= customer._id %>" title="Alterar Cliente">Alterar </a>
          </td>
          </tr>
          <% })
          }%>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <a href="/novo">Cadastrar novo cliente</a>
        </td>
      </tr>
    </tfoot>
  </table>
</body>

</html>